<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="MyGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Grid.Column="1" Content="Añadir mamahuevo" HorizontalAlignment="Center" Margin="0,109,0,0" VerticalAlignment="Top" Height="176" Grid.RowSpan="2" Width="313" Click="AbrirSegundaVentana"/>
        <Button Content="añadir" HorizontalAlignment="Left" Margin="53,109,0,0" VerticalAlignment="Top" Height="83" Width="136" Click="AnyadirProducto" Grid.Column="1" Grid.Row="1"/>
        <Label Content="{Binding Nombre}" HorizontalAlignment="Center" Margin="0,92,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
