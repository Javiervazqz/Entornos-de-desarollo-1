<Window x:Class="CompraVentaProductos.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Añadir Producto" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="txtNombre" Width="200" Margin="5"/>
            <TextBox x:Name="txtImagePath" Width="200" Margin="5"/>
            <TextBox x:Name="txtPrecio" Width="200" Margin="5"/>
            <Button Content="Guardar" Click="Guardar_Click" Width="100" Margin="5" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>


