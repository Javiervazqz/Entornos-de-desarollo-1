<Window x:Class="CompraVentaProductos.ProductDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalles del Producto" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <Image Source="{Binding Producto.ImagePath}" Width="200" Height="200"/>
            <TextBlock Text="{Binding Producto.Nombre}" FontWeight="Bold" FontSize="16" TextAlignment="Center" Margin="10"/>
            <TextBlock Text="{Binding Producto.Precio, StringFormat=C}" FontSize="14" TextAlignment="Center" Margin="10"/>
            <TextBlock Text="Detalles del Producto:" FontWeight="Bold" FontSize="14" Margin="10"/>
            <TextBlock Text="{Binding Producto.Detalles}" TextWrapping="Wrap" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>

